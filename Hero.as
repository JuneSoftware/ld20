package  {		import World;	import flash.display.MovieClip;	import flash.events.Event;	import flash.ui.Keyboard;	import flash.geom.Rectangle;		public class Hero extends MovieClip {				var world:World;		var vx:Number;		var vy:Number;		var g:Number;		public var moveRight:Boolean;		public var moveLeft:Boolean;		public var jump:Boolean;		public var jumpInProgress:Boolean;				public function Hero(w:World) {			world = w;			this.addEventListener(Event.ENTER_FRAME, update);			reset();		}				public function reset():void {			this.alpha = 1;			this.x = 240;			this.y = 160;			this.vx = 0;			this.vy = 0;			this.g = 0.2;			this.moveRight = false;			this.moveLeft = false;			this.jump = false;			this.jumpInProgress = false;		}				function update(e:Event):void {			if(this.x > 3200 && moveRight) moveRight = false;			var ax = 0;			if(moveRight) {				ax = 1;				this.scaleX = 1;			} else if(moveLeft) {				ax = -1;				this.scaleX = -1;			}			if(jump && !jumpInProgress) {				if(world.gameInProgress) {					world.sJump.play();				}				jumpInProgress = true;				vy = -5;			}						vx += ax;			vy += g;						vx *= 0.8; // damping			if(vx < 0.05 && vx > -0.05) vx = 0;						var vxMax = 2;			if(vx > vxMax) vx = vxMax;			if(vx < -vxMax) vx = -vxMax;						var vyMax = 5;			if(vy > vyMax) vy = vyMax;						this.x += vx;			this.y += vy;						if(this.x < this.width/2) this.x = this.width/2;			if(this.x > world.ground.width) this.x = world.ground.width;						if(this.y > 160) {				vy = 0;				this.y = 160;				jumpInProgress = false;			}		}	}	}