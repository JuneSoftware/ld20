package  {		import Intro;	import World;//	import SoundSelect;	import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.Event;	import flash.media.Sound;	public class Main extends MovieClip {		var intro:Intro = null;		var world:World = null;		var sSelect:SoundSelect;		public function Main() {			trace("main");			this.addEventListener(Event.ADDED_TO_STAGE, addedToStage);		}				function addedToStage(e:Event):void {			this.removeEventListener(Event.ADDED_TO_STAGE, addedToStage);						intro = new Intro();			this.addChild(intro);						sSelect = new SoundSelect();						stage.addEventListener(KeyboardEvent.KEY_DOWN, handleKeyDown);			stage.addEventListener(KeyboardEvent.KEY_UP, handleKeyUp);		}		function handleKeyDown(e:KeyboardEvent):void {			if(world) {				if(world.wantExit && !world.gameInProgress) {					if(e.keyCode == Keyboard.SPACE) {						sSelect.play();						this.removeChild(world);						world = null;						intro = new Intro();						this.addChild(intro);					}				} else {					world.handleKeyDown(e.keyCode);				}			} else {				if(e.keyCode == Keyboard.SPACE) {					sSelect.play();					this.removeChild(intro);					intro = null;					world = new World();					this.addChild(world);				}			}		}		function handleKeyUp(e:KeyboardEvent):void {			if(world) {				world.handleKeyUp(e.keyCode);			}		}	}	}